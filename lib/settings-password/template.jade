#password-wrapper.hide
  .password-settings
    .heading
      .circle
        i.icon-lock
      h1= t('settings.change-password')
    form.form(action="/settings/password", method="post", role="form", autosubmit='autosubmit', autovalidate='autovalidate')
      ul.form-messages
      .form-group
        label #{t('settings.current-password')}
        input.form-control(type='password', name='current_password', tabindex=1, placeholder=t(''), value='', validate='required min-length:6')
      .form-group
        label #{t('password.new')}
        input.form-control(type='password', name='password', tabindex=2, placeholder=t(''), value='', validate='required min-length:6')
      .form-group
        label= t('settings.confirm-password')
        input.form-control(type='password', name='confirm_password', tabindex=3, placeholder=t(''), value='', validate='required same:password')
      .form-group: button.btn.btn-success.btn-block.btn-lg(tabindex=4)=t('settings.save')
