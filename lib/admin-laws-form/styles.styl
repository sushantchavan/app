#law-wrapper
  form
    .form-group
      span.error
        top 40px

    .link-group
      span.error
        top 40px
        right 20px

  .publish-status
    p
      padding 10px
      text-align center

      a
        font-size 12px
        text-decoration underline
        letter-spacing 0.04em

      span
        margin-right 5px
        letter-spacing 0.04em

  a.delete-law
    float right
    line-height 14px
    text-decoration underline

  .law-admin
    form
      .form-group.closingAt
        overflow hidden

        .input-group
          width 40%
          float left
          margin-left 0

          &:last-child
            margin-left 12px

        span.error
          top 10px

      .form-group
        input[readonly]
          background-color #fff
          cursor default

      textarea
        min-height 180px

      a.add-clause
      a.add-link
        width 100%
        margin 15px 0px

      a.add-link.btn-info
        background #16a085

      span.add-clause-forbidden
      span.add-link-forbidden
        display block
        width 100%
        color #F00
        text-align center

    .law-links
      overflow hidden

    .law-clause
      .clause-row
        .checkbox
          margin 0
        .clause-group
          &:first
            background red
        .clause-group.clause-order
          label
          input
            margin-left 5%

    .law-clause
    .law-link
      display block
      position relative
      float left
      width 100%
      margin 20px 0px 0px 0px
      padding 20px 0px 0px 0px
      border-top 1px solid #eee

      .remove-clause
      .remove-link
        float right

      .clause-row
      .link-row
        display block
        position relative
        float left
        width 100%
        margin 0px
        padding 10px 0px

        .clause-group
        .link-group
          display block
          position relative
          float left
          width 50%
          margin 0px
          padding 0px

          label
          input
            width 95%
            float left

      h4
        margin-top 0

.popover
  display block !important
  cursor default

.clock
  font-size 14px

.clock
  td
    padding 2px