doctype xml
rss(version='2.0',
    xmlns:content='http://purl.org/rss/1.0/modules/content/',
    xmlns:wfw='http://wellformedweb.org/CommentAPI/',
    xmlns:dc='http://purl.org/dc/elements/1.1/'
    xmlns:atom='http://www.w3.org/2005/Atom')
  channel
    title= config['organization name']
    atom:link(href= baseUrl + '/rss', rel='self', type='application/rss+xml')
    link= baseUrl
    description= config['organization name']
    if laws.length
      pubDate= new Date(laws[0].publishedAt).toUTCString()
    each law in laws
      - var permalink = baseUrl + '/law/' + law.id
      item
        title= law.mediaTitle
        link= permalink
        pubDate= new Date(law.publishedAt).toUTCString()
        guid(isPermaLink='true')= permalink
        description= law.summary
